<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NotificationBar.Views.Pages.AboutAppPage"
    xmlns:local="clr-namespace:NotificationBar"
    xmlns:rv="clr-namespace:NotificationBar.Views.ReuseableViews"
    xmlns:vm="clr-namespace:NotificationBar.ViewModels"
    x:DataType="vm:BaseViewModel"
    IsEnabled="{Binding IsNotBusy}">

    <ContentPage.BindingContext>
        <vm:BaseViewModel />
    </ContentPage.BindingContext>

    <Grid
        RowDefinitions="50,*"
        ColumnDefinitions="*">

        <!--Header-->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            RowDefinitions="*"
            ColumnDefinitions="35,*"
            ColumnSpacing="10"
            Padding="10,0"
            BackgroundColor="{DynamicResource HeaderBarFillColor}">

            <rv:BackImageView 
                Grid.Row="0"
                Grid.Column="0" />

            <Label 
                Grid.Row="0"
                Grid.Column="1"
                Text="About App"
                TextColor="{DynamicResource HeaderBarFillTextColor}"
                FontSize="22" />

            <rv:BusyIndicatorView
                Grid.Row="0" 
                Grid.Column="0"
                Grid.ColumnSpan="2" />
        </Grid>

        <!--Body-->
        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical"
            Padding="5,0"
            VerticalScrollBarVisibility="Never">

            <WebView
                Source="{x:Static local:GlobalVariables.aboutAppWebPage}" />
        </ScrollView>

        <!--Footer-->
    </Grid>
</ContentPage>