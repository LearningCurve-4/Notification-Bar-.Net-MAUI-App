<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NotificationBar.Themes.DefaultTheme">

    <!--Colors-->
    <Color x:Key="ScreenColor">white</Color>
    <Color x:Key="ScreenTextColor">Gray</Color>
    <Color x:Key="HeaderBarFillColor">#2196F3</Color>
    <Color x:Key="HeaderBarFillTextColor">White</Color>
    <Color x:Key="FooterBarFillColor">White</Color>
    <Color x:Key="FooterBarFillTextColor">#333333</Color>
    <Color x:Key="NotifBarFillColor">AliceBlue</Color>
    <Color x:Key="NotifBarFillTextColor">#2196F3</Color>
    <Color x:Key="FillColor">#2196F3</Color>
    <Color x:Key="FillTextColor">White</Color>
    <Color x:Key="BorderColor">#2196F3</Color>
    <Color x:Key="SwitchOnColor">Red</Color>
    <Color x:Key="SwitchThumbColor">#2196F3</Color>
    <Color x:Key="RefreshColor">#2196F3</Color>

    <!--Images-->
    <x:String x:Key="AboutApp">aboutappred.png</x:String>
    <x:String x:Key="GoBack">backthickarrowwhite.png</x:String>
    <x:String x:Key="NotifBell">bellblue.png</x:String>
    <x:String x:Key="ServiceBell">servicebellwhite.png</x:String>
    <x:String x:Key="ServiceBellStop">servicebellstopwhite.png</x:String>
    <x:String x:Key="Sound">soundbrown.png</x:String>
    <x:String x:Key="Audio">audiogreen.png</x:String>
    <x:String x:Key="Duration">clockred.png</x:String>

</ResourceDictionary>